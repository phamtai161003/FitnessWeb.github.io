@model IEnumerable<FitnessProject.Models.appointment>

@{
    ViewBag.Title = "Appointments";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    
}
<style>
    #blogsTable {
        width: 100%;
    }

    #blogsTable, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 12px;
        text-align: left;
        font-size: 14px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    h2 {
        margin-top: 150px;
        margin-left:390px
    }

    a {
        color: black;
    }

    .pagination {
        text-align: center;
        padding: 5px;
    }

        .pagination li {
            display: inline-block;
            margin-right: 20px;
        }
</style>
<h2>Appointments</h2>


<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Client ID</th>
                    <th>Target</th>
                    <th>Appointment Date</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Package</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.client_id</td>
                        <td>@appointment.target</td>
                        <td>@appointment.appointment_date</td>
                        <td>@appointment.name</td>
                        <td>@appointment.phone</td>
                        <td>@appointment.email</td>
                        <td>@appointment.package</td>
                        <td>
                            <a href="#" class="btn btn-danger btn-sm" onclick="deleteAppointment(@appointment.id)">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" />
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('table').DataTable({
                "pagingType": "full_numbers",
                "pageLength": 5
            });

            $('table_filter input').on('input', function () {
                table.search(this.value).draw();
            });
        });

        function deleteAppointment(appointmentId) {
            if (confirm("Are you sure you want to delete this appointment?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "Appointments")',
                    type: 'POST',
                    data: { id: appointmentId },
                    success: function (result) {
                        location.reload();
                    },
                    error: function () {
                        alert('An error occurred while deleting the appointment.');
                    }
                });
            }
        }
    </script>
}
